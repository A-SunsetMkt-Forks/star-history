{
  "compilerOptions": {
    "module": "ES2015",
    "lib": ["es6", "dom", "esnext"],
    "target": "ES2015",
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "removeComments": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}